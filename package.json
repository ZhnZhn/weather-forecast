{
  "name": "weather-forecast",
  "version": "0.3.0",
  "description": "Web app Weather Forecast",
  "main": "index.js",
  "scripts": {
    "dev": "webpack serve --config webpack.dev.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "css:min": "node ut/css-min.js",
    "css:sass": "node ut/css-sass.js",
    "css:all": "npm run css:sass && npm run css:min",
    "transpile": "babel ./src --out-dir ./js --source-maps --ignore test.js",
    "transpile:all": "babel ./src --out-dir ./js --source-maps",
    "build:dll": "webpack --color --progress --config webpack.dll.js",
    "build:dll-jsx": "webpack --color --progress --config webpack.dll-jsx.js",
    "stats": "npm run stats:json && npm run stats:report",
    "stats:json": "webpack --config webpack.dll-jsx.js --profile --json > stats.json",
    "stats:report": "webpack-bundle-analyzer stats.json --no-open --mode static",
    "stats:dll": "webpack --color --progress --config webpack.dll.js json > stats-dll.json"
  },
  "author": "Yevhenii Molodyi",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@babel/runtime": "^7.28.4",
    "dompurify": "^3.3.1",
    "leaflet": "^1.7.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.2.0",
    "redux": "^5.0.1",
    "redux-saga": "^1.4.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/eslint-parser": "^7.28.5",
    "@babel/plugin-transform-react-jsx": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.2",
    "@testing-library/react": "^16.3.0",
    "babel-jest": "^30.2.0",
    "babel-loader": "^10.0.0",
    "bundle-stats-webpack-plugin": "^4.21.7",
    "clean-css": "^5.3.3",
    "d3-color": "^3.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-redux-saga": "^1.3.2",
    "html-webpack-plugin": "^5.6.5",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "terser-webpack-plugin": "^5.3.16",
    "webpack": "^5.103.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "overrides": {
    "js-yaml": "~4.1.1",
    "glob": "~11.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/js/math/decimal-light",
      "<rootDir>/js/utils",
      "<rootDir>/js/components/zhn-animation",
      "<rootDir>/js/components/zhn-charts/cartesian",
      "<rootDir>/js/components/zhn-charts/d3Color",
      "<rootDir>/js/components/zhn-charts/d3Format",
      "<rootDir>/js/components/zhn-charts/d3Scale",
      "<rootDir>/js/components/zhn-charts/d3Shape",
      "<rootDir>/js/components/zhn-charts/scale",
      "<rootDir>/js/components/zhn-charts/scale/util",
      "<rootDir>/js/components/zhn-charts/shape",
      "<rootDir>/js/components/zhn-charts/util"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/js/math/decimal-light",
      "<rootDir>/js/utils",
      "<rootDir>/js/components/zhn-animate",
      "<rootDir>/js/components/zhn-charts/cartesian",
      "<rootDir>/js/components/zhn-charts/d3Color",
      "<rootDir>/js/components/zhn-charts/d3Format",
      "<rootDir>/js/components/zhn-charts/d3Scale",
      "<rootDir>/js/components/zhn-charts/d3Shape",
      "<rootDir>/js/components/zhn-charts/scale",
      "<rootDir>/js/components/zhn-charts/scale/util",
      "<rootDir>/js/components/zhn-charts/shape",
      "<rootDir>/js/components/zhn-charts/util"
    ]
  }
}
